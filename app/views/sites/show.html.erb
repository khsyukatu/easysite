<% if @topimage.present? %>
<header style="background-image:url(<%= @topimage.image.url %>)">
  <div class="container">
    <div class="intro-text">
      <div class="intro-lead-in"><%= @site.topimage.title %></div>
      <div class="intro-heading"><%= @topimage.head_text %></div>      
    </div>
  </div>
</header>
<% end %>

<div class="container">
  
  <div class="col-md-12 text-center">
    <h2>サービス</h2>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <%= image_tag(@service.image.url, class:"img img-responsive") %>
    </div>
    <div class="col-md-6">
      <h3 class="text-center"><%= @service.title %></h3>
      <p><%= @service.head_text %></p>
    </div>
  </div>

  <div class="col-md-12 text-center">
    <h2>お知らせ</h2>
  </div>
  <div class="col-md-12">
    <div class="row">
      <% @articles.each do |article| %>
        <div class="col-md-4 text-center">
          <p class="date">
            <%= article.created_at.strftime("%Y.%m.%d") %>
            <% if Date.today - article.created_at.to_date < 1 %>
              <span class="label label-danger">New!</span>
            <% end %>
          </p>
          <p class="news"><%= link_to article.title, site_article_path(@site, article) %></p>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="col-lg-12 text-center">
    <h2 class="section-heading">メンバー</h2>
  </div>
  <% @members.each do |member| %>
    <div class="row">
      <div class="col-sm-2 col-sm-offset-1">
        <div class="text-center">
          <%= image_tag(member.image.url, class:"img-responsive") %>
        </div>          
      </div>
      <div class="col-sm-9">
        <h4><%= member.name %></h4>
        <div>
          <%= member.description %>
        </div>
      </div>
    </div>
  <% end %>    
  
  
  <div class="col-lg-12 text-center">
    <h2 class="section-heading">お問い合わせ</h2>
  </div>
  <div class="col-lg-12">
    <form class="form-horizontal">
      <fieldset>
        <div class="form-group">
          <label for="inputEmail" class="col-lg-2 control-label">メールアドレス</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" id="inputEmail" placeholder="メールアドレスをご記入ください。">
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail" class="col-lg-2 control-label">件名</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" id="textField" placeholder="お問い合わせの概要を入力してください。">
          </div>
        </div>
        <div class="form-group">
          <label for="textArea" class="col-lg-2 control-label">お問い合わせ内容</label>
          <div class="col-lg-10">
            <textarea class="form-control" rows="3" id="textArea"></textarea>
            <span class="help-block">お返事には数日から1週間ほどいただく場合がございます。</span>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>